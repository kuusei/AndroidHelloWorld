<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="tk.kuusei.helloworld.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/silde_from_left"
            app:exitAnim="@anim/silde_to_right" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="jack" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="tk.kuusei.helloworld.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/silde_from_left"
            app:exitAnim="@anim/silde_to_right">
            <argument
                android:name="name"
                android:defaultValue="Tom" />
        </action>
    </fragment>
</navigation>